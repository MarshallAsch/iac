{
  "variables": {
    "fullname": "Jason Ernst",
    "username": "jason",
    "password": "{{ env `PACKER_PASSWORD` }}"
  },

  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "Debian_64",
      "disk_size": 100000,
      "cpus": 2,
      "memory": 4096,
      "hard_drive_interface": "sata",
      "hard_drive_nonrotational": "true",
      "hard_drive_discard": "true",
      "sata_port_count": "5",
      "iso_url": "http://ftp.debian.org/debian/dists/sid/main/installer-amd64/current/images/netboot/mini.iso",
      "iso_checksum": "md5:9d197756250b57c5af4848925debe3fd",
      "http_directory": "http",
      "ssh_username": "{{user `username`}}",
      "ssh_password": "{{user `password`}}",
      "ssh_wait_timeout": "40m",
      "shutdown_command": "echo '{{user `password`}}' | sudo -S halt -p",
      "headless": true,
      "boot_wait": "5s",
      "boot_command": [
        "<esc><wait>",
        "auto url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
        "passwd/user-fullname={{user `fullname`}} ",
        "passwd/username={{user `username`}} ",
        "passwd/user-password={{user `password`}} ",
        "passwd/user-password-again={{user `password`}} ",
        "<enter>"
      ]
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/vagrant.sh"
      ],
      "execute_command": "echo '{{user `password`}}' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
    }
  ]
}
